extends layouts/layout

block partial
    body         
        div(class="jumbotron")
            <h1>Vista de Productos</h1>
            <br>
            if hayProductos
                div(class="table-responsive")
                    table(class="table table-dark")
                        tbody
                            tr 
                                th Nombre 
                                th Precio 
                                th Foto                         
                        each p in productos
                            tr
                                td=p.title
                                td=p.price
                                td
                                    img(width='50' src=p.thumbnail alt='not found')
            else
                h3(class="alert alert-warning")!= "No se encontraron productos"